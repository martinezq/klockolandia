extends layout

block content

  section#banner
    div.content
      a(href="/")
        img(src="/images/logo.png" alt="logo klockolandii")
      br
      br
      br
      ul.actions
        li
          a.button.scrolly(href="/articles/ferie2019#title") Ferie      
        li
          a.button.scrolly(href="#regularne-zaj-cia") Zajęcia
        li
          a.button.scrolly(href="#oferta-urodzinowa") Urodziny
        li
          a.button.scrolly(href="#contact") Kontakt 
        li
          a.button.scrolly(href="#documents") Dokumenty

  section.wrapper
    div.inner
      p.big.align-center(style="font-weight: bold; margin: 0px;") Rozwój kreatywności, zabawa klockami, zajęcia popołudniowe, urodziny dla dzieci, zajęcia w szkołach i przedszkolach, współpraca w organizacji przyjęć, wesel oraz imprez, półkolonie, przystępne ceny.

  section#news.wrapper
    div.inner.flex.flex-3
      each article in articles
        if article.template === 'article.jade'
          div.flex-item.box
            div.image.fit
              a(href=article.url)
                img(src=article.url + "image.jpg" alt=article.title)
            div.content
              h3
                a(href=article.url)= article.title
              if article.intro.length > 0
                != typogr(article.intro).typogrify()
              if article.hasMore
                a(href=article.url) Czytaj więcej
    
    div.inner.flex.flex-3
      nav.logo.left
        if prevPage
          a.button.alt(href=prevPage.url + "#news") &laquo; Nowsze
        else
          a.button.alt(href='/archive.html') &laquo; Wszystkie
      nav.right
        if nextPage
          a.button.alt(href=nextPage.url + "#news") Starsze &raquo;

  section#prices.wrapper.style1
    div.inner
      !=contents['prices.md'].html

  section#contact.wrapper
    div.inner
      !=contents['contact.md'].html

  section#documents.wrapper
    div.inner
      !=contents['documents.md'].html
